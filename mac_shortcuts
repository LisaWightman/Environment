dock_translucent_hiddens() {
    defaults write com.apple.Dock showhidden -bool YES
    killall Dock
}
dock_notranslucent_hiddens() {
    defaults write com.apple.Dock showhidden -bool NO
    killall Dock
}
finder_show_hiddens() {
    defaults write com.apple.Finder AppleShowAllFiles YES
    killall Finder
}
finder_hide_hiddens() {
    defaults write com.apple.Finder AppleShowAllFiles NO
    killall Finder
}

env_set_plist_var() {
    /usr/libexec/PlistBuddy -c 'Delete :'"$1" ~/.MacOSX/environment.plist
    /usr/libexec/PlistBuddy -c 'Add :'"$1"' string "'"$2"'"' ~/.MacOSX/environment.plist
}

env_set_var() {
    eval export $1="$2"
    env_set_plist_var "$1" "$2"
}

volume_set() {
    local vol=$1;
    sudo osascript -e "set Volume $vol"
}

volume_mute() {
    volume_set 0
}