[user]
	name = Jeremy Vinding
	email = jeremy.vinding@closely.com
[color]
	diff = auto
	status = auto
	branch = auto
[alias]
    co = checkout
    pr = pull --rebase
    pf = pull --ff-only
    s = status -sb
    b = branch
    d = diff
    fa = fetch --all
    dc = diff --cached
    sl = stash list
    ss = stash show -u
    poop = stash pop
    mf = merge --ff-only
    changes = whatchanged -p
    sup = submodule update --recursive
    shootmenow = submodule
	l = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)[%an]%Creset' --abbrev-commit
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    ls-assumed = !"git ls-files -v | grep '^[a-z]' | cut -c3-"
    assume = update-index --assume-unchanged
    unassume = update-index --no-assume-unchanged
    ls = ls-files --exclude-standard
    lsm = ls-files --exclude-standard -m
    lso = ls-files --exclude-standard -o
    lsc = ls-files --unmerged
    ff = flow feature
    ffl = flow feature list
    ffc = flow feature checkout
[core]
	excludesfile = /Users/jvinding/.gitignore
	autocrlf = input
	ignorecase = false
[branch]
	autosetupmerge = true
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[push]
	default = current
